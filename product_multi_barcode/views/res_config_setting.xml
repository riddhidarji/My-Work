<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_barcode_settings_view" model="ir.ui.view">
        <field name="name">product.barcode.settings.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='companies']" position="before">
                <h2>Product Multi Barcode Configaration</h2>
                <div class="row mt16 o_settings_container"  name="stock_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="process_notification">
                        <div class="o_setting_left_pane">
                            <field name="barcode_configration"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="barcode_configration"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

